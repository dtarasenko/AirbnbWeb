  <display-name>Archetype Created Web Application</display-name>

    <description>ServletContextListener</description>>
    <listener>
        <listener-class>com.gojava6.airbnb.web.Listener.EMF</listener-class>>
    </listener>
    <listener>
        <listener-class>com.gojava6.airbnb.web.Listener.Context</listener-class>>
