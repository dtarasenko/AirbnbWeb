<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

  <display-name>Archetype Created Web Application</display-name>

    <description>ServletContextListener</description>>
    <listener>
        <listener-class>com.gojava6.airbnb.web.PersistenceAppListener</listener-class>>
    </listener>


    <jsp-config>
        <jsp-property-group>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>




    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.gojava6.airbnb.web.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/adminusers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/adminapartments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/adminreservations</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>FilterNotLoggedInUsers</filter-name>
        <filter-class>com.gojava6.airbnb.web.FilterNotLoggedInUsers</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterNotLoggedInUsers</filter-name>
        <url-pattern>/contacts</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>FilterNotSignedUpUsers</filter-name>
        <filter-class>com.gojava6.airbnb.web.FilterNotSignedUpUsers</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterNotSignedUpUsers</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

</web-app>
